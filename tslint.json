{
  "defaultSeverity": "error",
  "extends": "tslint-config-prettier",
  "rules": {
    "arrow-parens": true,
    "curly": [true, "as-needed"],
    "trailing-comma": [true, {
      "multiline": {
        "arrays": "always",
        "exports": "always",
        "imports": "always",
        "objects": "always",
        "typeLiterals": "always"
      },
      "singleline": "never",
      "esSpecCompliant": true
    }],
    "quotemark": [true, "single"],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-preblock",
      "check-typecast",
      "check-type-operator",
      "check-separator",
      "check-rest-spread",
      "check-type"
    ],
    "semicolon": [true, "always"],
    "eofline": true,
    "interface-name": true
  }
}
